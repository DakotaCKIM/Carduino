<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                tools:context=".MainActivity" >


    //All buttons are named logically they start with a uppercase letter (full word)

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:text="Right"
            android:id="@+id/Right"
            android:layout_above="@+id/Down" android:layout_toRightOf="@+id/Up"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:text="Down"
            android:id="@+id/Down"
            android:layout_above="@+id/Select" android:layout_alignParentStart="true" android:layout_marginLeft="69dp"
            android:visibility="invisible"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:text="Up"
            android:id="@+id/Up"
            android:layout_above="@+id/Left" android:layout_toRightOf="@+id/Left"
            android:visibility="invisible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="" android:id="@+id/textView"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="Left"
            android:id="@+id/Left"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:text="B"
            android:id="@+id/B"
            android:layout_marginLeft="104dp"
            android:layout_alignTop="@+id/textView" android:layout_toRightOf="@+id/textView"></Button>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:text="A"
            android:id="@+id/A"
            android:layout_alignBottom="@+id/textView" android:layout_toRightOf="@+id/B"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Select"
            android:id="@+id/Select"
            android:layout_above="@+id/Preferences" android:layout_toLeftOf="@+id/B"/>
    <Button
            android:id="@+id/Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/android_button"
            android:layout_alignBottom="@+id/Select" android:layout_alignEnd="@+id/Connect"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Preferences"
            android:id="@+id/Preferences" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
            />
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Align"
            android:id="@+id/Realign" android:layout_above="@+id/A" android:layout_toLeftOf="@+id/B"
            android:layout_alignStart="@+id/Select" />
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/Connect" android:layout_alignTop="@+id/Realign" android:layout_toRightOf="@+id/textView"
            android:layout_alignEnd="@+id/Start" />

</RelativeLayout>


